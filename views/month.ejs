<div class="cal-header">
    <a href="/month/<%= prevYear %>/<%= prevMonth %>" class="nav-arrow" aria-label="Previous month">&lsaquo;</a>
    <h2><%= title %></h2>
    <a href="/month/<%= nextYear %>/<%= nextMonth %>" class="nav-arrow" aria-label="Next month">&rsaquo;</a>
</div>
<table class="month-grid">
    <thead>
        <tr>
            <% dayHeaders.forEach(function(d) { %>
                <th><%= d %></th>
            <% }); %>
        </tr>
    </thead>
    <tbody>
        <% weeks.forEach(function(week) { %>
            <tr>
                <% week.forEach(function(d) { %>
                    <td class="month-cell<%= d.isCurrentMonth ? '' : ' other-month' %>">
                        <a href="/day/<%= d.year %>/<%= d.month %>/<%= d.day %>"
                           class="day-num<%= (d.year === today.getFullYear() && d.month === today.getMonth() + 1 && d.day === today.getDate()) ? ' today-num' : '' %>"><%= d.day %></a>
                    </td>
                <% }); %>
            </tr>
        <% }); %>
    </tbody>
</table>
