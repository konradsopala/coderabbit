<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calendar</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <nav class="navbar">
        <a href="/" class="nav-title">Calendar</a>
        <div class="view-switcher">
            <a href="/month/<%= nav.ctxYear %>/<%= nav.ctxMonth %>"
               class="view-btn<%= nav.viewMode === 'month' ? ' active' : '' %>">Month</a>
            <a href="/week/<%= nav.ctxIsoYear %>/<%= nav.ctxIsoWeek %>"
               class="view-btn<%= nav.viewMode === 'week' ? ' active' : '' %>">Week</a>
            <a href="/day/<%= nav.ctxYear %>/<%= nav.ctxMonth %>/<%= nav.ctxDay %>"
               class="view-btn<%= nav.viewMode === 'day' ? ' active' : '' %>">Day</a>
        </div>
        <% if (nav.viewMode === 'month') { %>
            <a href="/month/<%= nav.today.getFullYear() %>/<%= nav.today.getMonth() + 1 %>" class="today-btn">Today</a>
        <% } else if (nav.viewMode === 'week') { %>
            <a href="/week/<%= nav.todayIsoYear %>/<%= nav.todayIsoWeek %>" class="today-btn">Today</a>
        <% } else { %>
            <a href="/day/<%= nav.today.getFullYear() %>/<%= nav.today.getMonth() + 1 %>/<%= nav.today.getDate() %>" class="today-btn">Today</a>
        <% } %>
    </nav>
    <main class="container">
